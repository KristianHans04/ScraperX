# ScraperX Environment Configuration
# Copy this file to .env and adjust values for your environment

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# PostgreSQL Configuration
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>
DATABASE_POOL_SIZE=20
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Job Queue Configuration
QUEUE_PREFIX=scraperx
QUEUE_CONCURRENCY=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=10

# API Key Configuration
API_KEY_PREFIX=sk_live_
API_KEY_LENGTH=32
API_KEY_HASH_ROUNDS=10

# Scraping Configuration
SCRAPE_TIMEOUT_MS=30000
SCRAPE_MAX_RETRIES=3
SCRAPE_RETRY_DELAY_MS=1000

# HTTP Engine Configuration
HTTP_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Browser Engine Configuration
BROWSER_HEADLESS=true
BROWSER_POOL_MIN=2
BROWSER_POOL_MAX=10
BROWSER_PAGE_TIMEOUT_MS=30000

# Proxy Configuration
PROXY_ENABLED=false
PROXY_DATACENTER_URL=
PROXY_RESIDENTIAL_URL=
PROXY_MOBILE_URL=

# Camoufox (Stealth Engine) Configuration
CAMOUFOX_SERVICE_URL=http://localhost:8000
CAMOUFOX_ENABLED=false

# MinIO / S3 Storage Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=<access_key>
MINIO_SECRET_KEY=<secret_key>
MINIO_BUCKET_CONTENT=scraperx-content
MINIO_BUCKET_SCREENSHOTS=scraperx-screenshots
MINIO_USE_SSL=false

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# CAPTCHA Service Configuration
CAPTCHA_SERVICE_ENABLED=false
TWOCAPTCHA_API_KEY=
ANTICAPTCHA_API_KEY=
